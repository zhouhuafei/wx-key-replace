{
  "extends": "tslint:recommended",
  "rulesDirectory": ["./src"],
  "rules": {
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "quotemark": ["single"],
    "no-conditional-assignment": true,
    "prefer-const": false,
    "trailing-comma": [false],
    "object-literal-sort-keys": false,
    "ordered-imports": [false],
    "no-unused-expression": false,
    "no-consecutive-blank-lines": [true, 2],
    "no-console": [false],
    "compilerOptions": {
      "lib": ["es6"]
    }
  }
}